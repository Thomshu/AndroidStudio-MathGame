<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NumQuestionsActivity">


    <TextView
        android:id="@+id/numQTextView"
        android:layout_width="319dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="18dp"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/etNumQ"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="How many questions do you want?"
        />

    <EditText
        android:id="@+id/etNumQ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:ems="10"
        android:hint="Enter number here"

        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/btnNumQSubmit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numQTextView" />

    <Button
        android:id="@+id/btnNumQSubmit"
        android:layout_width="234dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="379dp"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etNumQ" />
</androidx.constraintlayout.widget.ConstraintLayout>